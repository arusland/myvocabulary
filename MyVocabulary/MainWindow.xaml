<Window x:Class="MyVocabulary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:MyVocabulary.Controls"
        Title="MainWindow"
        Width="819"
        Height="442" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl x:Name="TabControlMain">
            <TabItem x:Name="TabItemBadKnown" Header="Bad Known" />
            <TabItem x:Name="TabItemKnown" Header="Known" />
            <TabItem x:Name="TabItemUnknown" Header="Unknown" />
        </TabControl>
    </Grid>
</Window>
