<Window x:Class="MyVocabulary.Dialogs.WordsImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Words"
        Width="763"
        Height="357"
        Icon="/MyVocabulary;component/Images/MainApp.ico"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlock"
                   Margin="3"
                   Text="Paste text to import" />
        <Border x:Name="BorderMain"
                Grid.Row="1"
                Margin="3"
                BorderThickness="1">
            <TextBox x:Name="TextBoxMain"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible" />
        </Border>

        <DockPanel Grid.Row="2">
            <CheckBox x:Name="CheckBoxParseByLine"
                      Margin="3"
                      VerticalAlignment="Center"
                      Content="Parse by line" />

            <CheckBox x:Name="CheckBoxParseOnlyLatin"
                      Margin="3"
                      VerticalAlignment="Center"
                      Content="Parse only Latin"
                      IsChecked="True" />

            <CheckBox x:Name="CheckBoxIgnoreUnknownTab"
                      Margin="3"
                      VerticalAlignment="Center"
                      Content="Ignore Unknown Tab"
                      IsChecked="False" />

            <Button x:Name="ButtonClose"
                    Width="90"
                    Height="25"
                    Margin="3"
                    HorizontalAlignment="Right"
                    Click="ButtonClose_Click"
                    Content="Close"
                    DockPanel.Dock="Right"
                    IsCancel="True" />
            <Button x:Name="ButtonProcess"
                    Width="90"
                    Height="25"
                    Margin="3"
                    HorizontalAlignment="Right"
                    Click="ButtonProcess_Click"
                    Content="Process" />
        </DockPanel>
    </Grid>
</Window>
